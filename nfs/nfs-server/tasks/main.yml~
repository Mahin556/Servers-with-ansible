---
- name: task1
  yum:
    name: 
      - nfs-utils
      - rpcbind
    state: present
  
- name: task2
  file:
    path: "{{ nfs_share }}"
    mode: "0777"
    state: directory
   
- name: task3
  copy:
    src: "{{ item }}"
    dest: "{{ nfs_share }}"
    remote_src: no
  with_fileglob:
    - "/etc/*.conf;"
- name: task4
  template:
    src: exports.j2
    dest: /etc/exports

- name: start and enable services
  service:
    name: "{{ item }}"
    state: restarted
    enabled: true
  loop: "{{ srvs }}"

- name: task5
  firewalld:
    service: "{{ item }}"
    state: enabled
    permanent: true
    immediate: true
  loop:
    - nfs
    - rpc-bind
    - mountd    

- name: task6
  selinux:
    policy: targeted
    state: permissive


