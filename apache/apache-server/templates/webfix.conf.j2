<virtualhost *:80>
    servername  {{ server_name }}
    serveralias {{ server_alias }}
    redirect permanent / https://{{ server_name }}
</virtualhost>

<VirtualHost *:443>
    ServerName {{ server_name }}
    ServerAlias {{ server_alias }}
    DocumentRoot {{ doc_root }}
    
{% if ssl_engine is defined and ssl_engine | lower == "yes" %}
    SSLEngine on
    SSLCertificateFile {{ paths.ssl_crt }}
    SSLCertificateKeyFile {{ paths.ssl_key }}
{% endif %}

    <Directory {{ doc_root }}>
        DirectoryIndex index.html
        Require all granted
    </Directory>
</VirtualHost>


